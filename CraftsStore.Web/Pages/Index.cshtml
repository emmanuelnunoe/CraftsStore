@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var makers = Model.Products.Select(c => c.Maker).Distinct();
}



<div class="text-center">
    <h1 class="display-4">Hola clase</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="mb-3">
    @if(makers.Any())
    {
        @foreach (var maker in Model.Products.Select(c => c.Maker).Distinct())
        {
        <a href="~/maker/@maker" class="mr-3">@maker</a>
        }
    }
</div>
<nav>
    <a href="~/newProduct" class="btn btn-primary">>Add Product</a>
</nav>
@if(Model.Products.Any())
{ 
<section class="card-columns">
    @foreach (var product in @Model.Products)
    {
        var bgColor = product.Maker == "jenlooper" ? "bg-info" : "";

        <div class="card @bgColor">
    
            <div class="card-body">
                <h3 class="card-title">

                    @product.Title
                </h3>
                <div>Maker: @product.Maker</div>
                <div class="mt-3 text-right">
                    <a href="~/details/@product.Id" class="btn btn-primary"> Detalles</a>

                </div>
            </div>
        </div>
    }

</section>
}
            else
            {
                <p class="lead text-center" >There's is no product to show'</p>
            }


@page "/details/{id}"
@model CraftsStore.Web.Pages.DetailsModel
@{

}


<div class="card">

    <div class="card-body">
        <h3 class="card-title">

            @Model.Product.Title
        </h3>
        <div>Maker: @Model.Product.Maker</div>
        <div class="mt-3">
            <img src="@Model.Product.Image" class="card-img-top" alt="...">

            <div>@Model.Product.Description</div>
            <div>@Model.Product.Url</div>
        </div>
    </div>
</div>